generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  gender   String
  password String
  image    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Review    review[]
}

model review {
  id      String  @id @default(uuid())
  userId  String
  tittle  String
  opinion String
  release String
  rating  Int
  images  image[]

  user user @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model image {
  id       String  @id @default(uuid())
  imageUrl String?
  reviewId String

  review review @relation(fields: [reviewId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
